@model BookProduction.BookModel
<div class="container">
    <form class="form-horizontal" method="post">
        <div class="row">
            <div class="form-group col-md-4">
                <label for="publishId" class="control-label col-md-2">Код</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" id="publishId" name="Id" placeholder="Издательский код"  value="@Model.Id"/>
                </div>
            </div>
            <div class="form-group col-md-8">
                <label for="bookName" class="control-label col-md-4">Название книги</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" id="bookName" name="Name" placeholder="Название" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-4">
                <label for="pagesNumber" class="control-label col-md-8">Количество страниц</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="pagesNumber" name="PagesNumber" placeholder="стр." />
                </div>
            </div>
            <div class="form-group col-md-3">
                <label for="printRun" class="control-label col-md-5">Тираж</label>
                <div class="col-md-7">
                    <input type="text" class="form-control" id="printRun" name="PrintRun" placeholder="тираж" />
                </div>
            </div>
        </div>
        <hr />
        <h4>Внутренний блок</h4>
        <div class="row">
            <div class="col-md-4">
                <label for="IBFormat" class="control-label col-md-6">Формат</label>
                <div class="col-md-6">
                    <select class="form-control" name="IBFormat" id="IBFormat">
                        <option value="60*90/16">60*90/16</option>
                        <option value="60*90/8">60*90/8</option>
                        <option value="84*108/16">84*108/16</option>
                        <option value="84*108/32">84*108/32</option>
                        <option value="70*100/16">70*100/16</option>
                    </select>
                </div>
            </div>
            <div class="col-md-4">
                <label for="IBPaper" class="control-label col-md-4">Бумага</label>
                <div class="col-md-8">
                    <select class="form-control" name="IBPaper" id="IBPaper">
                        <option value="BookProduction.PaperFullType.Newsprint_45">газетка 45 г/м2</option>
                        <option value="BookProduction.PaperFullType.Offset_60">офсет 60 г/м2</option>
                        <option value="BookProduction.PaperFullType.Offset_80">офсет 80 г/м2</option>
                    </select>
                </div>
            </div>
            <div class="col-md-4">
                <label for="IBColors" class="control-label col-md-6">Цветность</label>
                <div class="col-md-6">
                    <select class="form-control" name="IBColors" id="IBColors">
                        <option value="1+1">1+1</option>
                        <option value="2+2">2+2</option>
                        <option value="4+4">4+4</option>
                    </select>
                </div>
            </div>
        </div>
        <h4>Обложка</h4>
        <div class="row">
            <div class="col-md-4">
                <label for="CoverPaper" class="control-label col-md-4">Бумага</label>
                <div class="col-md-8">
                    <select class="form-control" name="CoverPaper" id="CoverPaper">
                        <option value="BookProduction.PaperFullType.FoldingBoxboard_230">хром-эрзац 230 г/м2</option>
                        <option value="BookProduction.PaperFullType.CardboardAliaska_230">картон Аляска 230 г/м2</option>
                    </select>
                </div>
            </div>
            <div class="col-md-4">
                <label for="IBColors" class="control-label col-md-6">Цветность</label>
                <div class="col-md-6">
                    <select class="form-control" name="IBColors" id="CoverColors">
                        <option value="4+0">4+0</option>
                        <option value="4+1">4+1</option>
                        <option value="4+4">4+4</option>
                    </select>
                </div>
            </div>
        </div>
        <hr />

        <h4>Сборка</h4>
        <div class="row">
            <div class="col-md-4">
                <label for="Binding" class="control-label col-md-6">Переплет</label>
                <div class="col-md-6">
                    <input type="radio" name="Binding" value="BookProduction.BindingType.SaddleStitching">
                    Скоба<br>
                    <input type="radio" name="Binding" value="BookProduction.BindingType.PerfectBinding">
                    Клей<br>
                </div>
            </div>
            <div class="col-md-4">
                <label for="Lamination" class="control-label col-md-6">Ламинация</label>
                <div class="col-md-6">
                    <input type="radio" name="Lamination" value="BookProduction.LaminationType.Glossy">Глянцевая<br>
                    <input type="radio" name="Lamination" value="BookProduction.LaminationType.Matte">Матовая<br>
                    <input type="radio" name="Lamination" value="BookProduction.LaminationType.withoutLamination">Без ламинации<br>
                </div>
            </div>
            <div class="col-md-4">
                <label for="Perforation" class="control-label col-md-8">Перфорация</label>
                <input type="checkbox" name="Perforation" id="Perforation" />
            </div>
        </div>
                <input type="submit" name="button" value="Calculate" />
    </form>

            @if (ViewBag.Report != null)
        {
            <div>
                <h3>Расходы на тиражирование</h3>
                Затраты на полиграфию: @ViewBag.Report.CostOfPolygraphy грн<br>
                Затраты на материалы: @ViewBag.Report.CostOfMaterials грн<br>
                Затраты на сборку: @ViewBag.Report.CostOfAssembly грн<br>
                Затраты на тираж: @ViewBag.Report.CostOfPrintRun грн<br>
                <b>Затраты на 1 экземпляр: @ViewBag.Report.CostOfPolygraphyPerOneItem грн</b><br>
            </div>
        }
</div>
